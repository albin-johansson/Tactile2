{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "tactile",
  "license": "GPL-3.0",
  "version-semver": "0.5.0",
  "maintainers": [
    "albin-johansson"
  ],
  "builtin-baseline": "6062c8fe02d38b10d5291411bc235ae4d02cfe6c",
  "dependencies": [
    "argparse",
    "boost-stacktrace",
    "boost-uuid",
    "entt",
    "cppcodec",
    "fast-float",
    "gtest",
    {
      "name": "imgui",
      "features": [
        "docking-experimental",
        "sdl2-binding"
      ]
    },
    "magic-enum",
    "nlohmann-json",
    "protobuf",
    "pugixml",
    "sdl2",
    "sdl2-image",
    "stb",
    "tinyfiledialogs",
    "yaml-cpp",
    "zlib",
    "zstd"
  ],
  "features": {
    "opengl": {
      "description": "Add OpenGL support",
      "dependencies": [
        {
          "name": "glad",
          "features": [
            "extensions"
          ]
        },
        {
          "name": "imgui",
          "features": [
            "opengl3-binding"
          ]
        }
      ]
    },
    "vulkan": {
      "description": "Add Vulkan support",
      "dependencies": [
        {
          "name": "sdl2",
          "features": [
            "vulkan"
          ]
        },
        {
          "name": "imgui",
          "features": [
            "vulkan-binding"
          ]
        },
        "vulkan-memory-allocator"
      ]
    }
  }
}
